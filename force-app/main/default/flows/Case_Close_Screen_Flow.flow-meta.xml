            <conditions>
                <leftValueReference>Get_Case.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>closed_status</targetReference>
            </connector>
            <label>status is closed - present</label>
        </rules>
    </decisions>
